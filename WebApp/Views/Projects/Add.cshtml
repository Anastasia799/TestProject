@model Domain.Entities.Project

@{
    ViewData["Title"] = "Add new project";
    Layout = "_Layout";
}

<form asp-controller="Projects" asp-action="Add" style="width: 50%;margin: 0 auto;">
    <div class="form-group">
        <label>Project name</label>
        <input type="text" asp-for="Name" class="form-control">
    </div>
    <div class="form-group">
        <label>Customer Company Name</label>
        <input type="text" asp-for="CustomerCompanyName" class="form-control">
    </div>
    <div class="form-group">
        <label>Executer Company Name</label>
        <input type="text" asp-for="ExecutiveCompanyName" class="form-control">
    </div>
    <div class="form-group">
        <label>Project Manager</label>
        @* <input type="text" asp-for="ProjectManager" class="form-control"> *@
        @* @Html.DropDownListFor(x => x!.Id, ViewBag.Employee as SelectList) *@
    </div><hr>
    <div class="form-group">
            <label>Date Start</label>
            <input type="text" asp-for="StartDate" class="form-control">
        </div>
        <div class="form-group">
            <label>Date End</label>
            <input type="date" asp-for="EndDate" class="form-control">
        </div>
    <div class="form-group">
        <label>Priority</label>
        @* <input type="date" asp-for="Priority" class="form-control"> *@
    </div>
        <select name="number" asp-for="Priority">
            <option value="">Select priority</option>
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
        </select>
    <p>
        <input type="submit" class="btn btn-success m-4" value="Add" style="width: 100px"/>
    </p>
</form>


